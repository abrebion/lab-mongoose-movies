<h2>Edit a celebrity - {{name}}</h2>
<form action="/celebrities/{{_id}}" method="POST">
    <fieldset>
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="{{name}}">
    </fieldset>
    <fieldset>
        <label for="occupation">Occupation</label>
        <input type="text" name="occupation" id="occupation" value="{{occupation}}">
    </fieldset>
    <fieldset>
        <label for="catchphrase">Catch Phrase</label>
        <textarea name="catchPhrase" rows="5" cols="50" id="catchphrase">{{catchPhrase}}</textarea>
    </fieldset>
    <button type="">Update</button>
</form>